<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ch.awae.cncpp.fx.FileListController">
    <center>
        <ListView fx:id="fileList"/>
    </center>
    <bottom>
        <BorderPane>
            <padding>
                <Insets top="20" right="20" left="20" bottom="20"/>
            </padding>
            <left>
                <HBox spacing="20">
                    <Button onAction="#onAddFile">Open File</Button>
                    <Button onAction="#onCreateFile">Create File</Button>
                </HBox>
            </left>
            <right>
                <Button onAction="#onNext" fx:id="nextButton">Next</Button>
            </right>
        </BorderPane>
    </bottom>

</BorderPane>
