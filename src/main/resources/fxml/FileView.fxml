<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ch.awae.cncpp.fx.FileViewController">
    <center>
        <TextArea fx:id="textArea"/>
    </center>
    <bottom>
        <BorderPane>
            <padding>
                <Insets top="20" right="20" left="20" bottom="20"/>
            </padding>
            <left>
                <Button onAction="#onBack">Back</Button>
            </left>
            <right>
                <HBox spacing="20">
                    <Button onAction="#onReload" fx:id="reloadButton">Reload</Button>
                    <Button onAction="#onSave">Save Changes</Button>
                </HBox>
            </right>
        </BorderPane>
    </bottom>

</BorderPane>
